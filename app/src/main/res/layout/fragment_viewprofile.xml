<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".ui.editProfile.EditProfileFragment">

    <ImageView
        android:id="@+id/edit_profilePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/profile_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/user_image"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="42dp" />


    <TextView
        android:id="@+id/edit_name"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:textSize="17sp"
        android:textColorHint="@color/gray"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_profilePicture"
        tools:ignore="Autofill,HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/edit_email"
        android:layout_width="312dp"
        android:textSize="17sp"
        android:textColorHint="@color/gray"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_name"
        android:layout_marginTop="20dp"
        tools:ignore="Autofill,HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/countryMenu"
        android:layout_width="312dp"
        android:textSize="17sp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_background"
        android:theme="@style/Theme.BidBoss.login"
        android:popupBackground="@color/black"
        android:textColor="@color/black"
        android:textColorHint="#050505"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_email"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/edit_phoneNumber"
        android:textColorHint="@color/gray"
        android:layout_width="312dp"
        android:textSize="17sp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/countryMenu"
        tools:ignore="Autofill,HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/edit_passport"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:textSize="17sp"
        android:textColorHint="@color/gray"
        android:background="@drawable/edit_text_background"
        android:padding="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_phoneNumber"
        tools:ignore="Autofill,HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/edit_postalCode"
        android:layout_width="312dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_background"
        android:inputType="textPostalAddress"
        android:textSize="17sp"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_passport"
        tools:ignore="Autofill,HardcodedText,MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>